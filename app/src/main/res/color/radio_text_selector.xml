<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_checked="true" android:color="@color/orange">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange"/> <!-- background when selected -->
            <corners android:radius="16dp"/>   <!-- rounded corners -->
        </shape>
    </item>


    <!-- Default / unselected state -->
    <item android:color="@color/white">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- background when unselected -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

</selector>
